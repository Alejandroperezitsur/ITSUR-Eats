# ════════════════════════════════════════════════════════════
# DATABASE CONFIGURATION
# ════════════════════════════════════════════════════════════
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/itsur_eats_dev

# ════════════════════════════════════════════════════════════
# JWT & AUTHENTICATION
# ════════════════════════════════════════════════════════════
JWT_SECRET=your_super_secret_key_change_in_production_min_32_characters_long
REFRESH_SECRET=your_refresh_secret_key_change_in_production_min_32_characters_long
JWT_EXPIRY=15m
REFRESH_EXPIRY=7d

# ════════════════════════════════════════════════════════════
# STRIPE (Sandbox/Test Mode)
# ════════════════════════════════════════════════════════════
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_yyy
STRIPE_WEBHOOK_SECRET=whsec_test_zzz

# ════════════════════════════════════════════════════════════
# FIREBASE (Cloud Messaging)
# ════════════════════════════════════════════════════════════
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# ════════════════════════════════════════════════════════════
# SERVER CONFIGURATION
# ════════════════════════════════════════════════════════════
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# ════════════════════════════════════════════════════════════
# CORS CONFIGURATION
# ════════════════════════════════════════════════════════════
CORS_ORIGIN=http://localhost:19000,http://localhost:3001,http://localhost:5173

# ════════════════════════════════════════════════════════════
# APPLICATION URLs
# ════════════════════════════════════════════════════════════
APP_NAME=ITSUR Eats
API_VERSION=v1
