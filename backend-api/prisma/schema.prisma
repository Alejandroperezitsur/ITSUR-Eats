// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ════════════════════════════════════════════════════════════
// ENUMS
// ════════════════════════════════════════════════════════════

enum UserRole {
  STUDENT
  CAFETERIA_STAFF
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  ACCEPTED
  READY
  COMPLETED
  CANCELLED
}

enum PaymentMethod {
  CARD
  WALLET
}

enum PaymentStatus {
  PENDING
  SUCCEEDED
  FAILED
  CANCELLED
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  LOGIN
  LOGOUT
  PAYMENT_ATTEMPTED
  PAYMENT_SUCCESS
  PAYMENT_FAILED
  ORDER_CREATED
  ORDER_ACCEPTED
  ORDER_READY
  ORDER_COMPLETED
  ORDER_CANCELLED
}

enum NotificationPlatform {
  IOS
  ANDROID
}

// ════════════════════════════════════════════════════════════
// MODELS
// ════════════════════════════════════════════════════════════

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // bcrypt hash
  name      String
  role      UserRole @default(STUDENT)
  avatar    String?
  isActive  Boolean  @default(true)
  lastLogin DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  orders          Order[]
  acceptedOrders  Order[]     @relation("AcceptedBy")
  fcmTokens       FcmToken[]
  auditLogs       AuditLog[]  @relation("User")
  payments        Payment[]

  @@index([email])
  @@index([role])
  @@map("users")
}

model Category {
  id           String   @id @default(cuid())
  name         String   @unique
  description  String?
  icon         String?
  displayOrder Int      @default(0)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  products Product[]

  @@index([displayOrder])
  @@map("categories")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  imageUrl    String?
  stock       Int      @default(0)
  available   Boolean  @default(true)
  categoryId  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  category    Category     @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  orderItems  OrderItem[]

  @@index([categoryId])
  @@index([available])
  @@map("products")
}

model Order {
  id          String      @id @default(cuid())
  userId      String
  status      OrderStatus @default(PENDING)
  total       Decimal     @db.Decimal(10, 2)
  notes       String?
  acceptedById String?
  acceptedAt  DateTime?
  readyAt     DateTime?
  completedAt DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  acceptedBy   User?        @relation("AcceptedBy", fields: [acceptedById], references: [id], onDelete: SetNull)
  items        OrderItem[]
  payment      Payment?
  auditLogs    AuditLog[]

  @@index([userId])
  @@index([status])
  @@index([createdAt(sort: Desc)])
  @@index([acceptedById])
  @@map("orders")
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  unitPrice Decimal  @db.Decimal(10, 2)
  subtotal  Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now())

  // Relations
  order    Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product  Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([orderId])
  @@index([productId])
  @@map("order_items")
}

model Payment {
  id              String        @id @default(cuid())
  orderId         String        @unique
  userId          String
  amount          Decimal       @db.Decimal(10, 2)
  method          PaymentMethod
  status          PaymentStatus @default(PENDING)
  stripeIntentId  String?       @unique
  stripeChargeId  String?       @unique
  errorMessage    String?
  succeededAt     DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  order Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  user  User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([userId])
  @@index([status])
  @@map("payments")
}

model FcmToken {
  id        String                 @id @default(cuid())
  userId    String
  token     String                 @unique
  platform  NotificationPlatform
  active    Boolean                @default(true)
  createdAt DateTime               @default(now())
  updatedAt DateTime               @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("fcm_tokens")
}

model AuditLog {
  id         String       @id @default(cuid())
  action     AuditAction
  entityType String       // "Order", "Payment", "User", etc
  entityId   String
  userId     String?
  orderId    String?
  changes    Json?        // JSON object with before/after
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime     @default(now())

  // Relations
  user  User?  @relation("User", fields: [userId], references: [id], onDelete: SetNull)
  order Order? @relation(fields: [orderId], references: [id], onDelete: SetNull)

  @@index([action])
  @@index([entityType])
  @@index([userId])
  @@index([createdAt(sort: Desc)])
  @@map("audit_logs")
}
